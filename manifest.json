{
    "manifest_version": 2,
    "name": "CodeMore QRCode",
    "description": "CodeMore & QR code generator",
    "version": "1.0.1",
    "author": "Panda<itwujunze@gmail.com>",
    "offline_enabled": true,
    "permissions": [
        "tabs",
        "storage",
        "notifications"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "options_page": "options.html",
    "browser_action": {
        "default_title": "CodeMore QRCode",
        "default_icon": "icon/icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon/icon.png"
    }
}
